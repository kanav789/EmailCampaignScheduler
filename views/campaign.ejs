<!DOCTYPE html>
<html>
  <head>
    <title>All Campaigns</title>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th,
      td {
        padding: 10px;
        border: 1px solid #ccc;
      }
      th {
        background-color: #f2f2f2;
      }
      .status {
        text-transform: capitalize;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>All Email Campaigns</h1>

    <% if (campaign.length === 0) { %>
    <p>No campaigns found.</p>
    <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Message</th>
          <th>Recipients</th>
          <th>Scheduled Time</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% campaign.forEach(c => { %>
        <tr>
          <td><%= c.title %></td>
          <td><%= c.message.slice(0, 50) %>...</td>
          <td><%= c.recipients.join(", ") %></td>
          <td><%= new Date(c.scheduledTime).toLocaleString() %></td>
          <td class="status"><%= c.status %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>

    <br />
    <a href="/">Create New Campaign</a>
  </body>
</html>
